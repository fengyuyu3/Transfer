<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/id_cord_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ironaviation.traveller.mvp.ui.widget.AutoScrollView
        android:layout_marginTop="@dimen/margin_new_top"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginLeft="@dimen/margin_new_left"
            android:layout_marginRight="@dimen/margin_new_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:background="@drawable/white_8_radius_shap"
                android:visibility="visible"
                android:id="@+id/ll_new_on_address"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.ironaviation.traveller.mvp.ui.widget.PublicTextView
                android:id="@+id/pw_new_person_airport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint1="@string/login_input_phone"
                app:left_logo1="@mipmap/ic_new_person"
                app:my_enable1="true"
                app:right_peroson1="true" />
            <com.ironaviation.traveller.mvp.ui.widget.PublicTextView
                android:id="@+id/pw_new_flt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint1="@string/airport_no"
                app:left_logo1="@mipmap/ic_new_fly"
                app:right_time1="true"/>

                <com.ironaviation.traveller.mvp.ui.widget.PublicTextView
                    android:id="@+id/pw_new_time_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint1="@string/airport_time"
                    app:left_logo1="@mipmap/ic_new_time"
                    app:right_time1="true"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_enterPort"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.ironaviation.traveller.mvp.ui.widget.PublicTextView
                    android:id="@+id/pw_new_airport_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint1="@string/airport_airport"
                    app:left_logo1="@mipmap/ic_come_address"
                    />
                <com.ironaviation.traveller.mvp.ui.widget.PublicTextView
                    android:id="@+id/pw_new_address_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint1="@string/airport_down_address"
                    app:left_logo1="@mipmap/ic_getdowm_address"
                    app:line1="false"
                    />
                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_clearPort"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.ironaviation.traveller.mvp.ui.widget.PublicTextView
                        android:id="@+id/pw_new_address_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hint1="@string/airport_address"
                        app:left_logo1="@mipmap/ic_getdowm_address"
                        app:line1="false"
                        />
                <com.ironaviation.traveller.mvp.ui.widget.PublicTextView
                    android:id="@+id/pw_new_airport_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint1="@string/airport_airport"
                    app:left_logo1="@mipmap/ic_come_address"
                    />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="@dimen/margin_new_top"
                android:layout_width="match_parent"
                android:layout_height="211px">
                <com.ironaviation.traveller.mvp.ui.widget.AutoViewPager
                    android:background="@drawable/white_8_radius_shap"
                    android:id="@+id/vp_new_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.ironaviation.traveller.mvp.ui.widget.AutoViewPager>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginBottom="20px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ll_new_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.zhy.autolayout.AutoLinearLayout>

                <ProgressBar
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/viewpager_progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="@dimen/margin_new_top"
                android:background="@drawable/white_8_radius_shap"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">
                <TextView
                    android:layout_marginLeft="18dp"
                    android:id="@+id/tw_validate"
                    android:drawablePadding="10px"
                    android:gravity="center"
                    android:drawableRight="@mipmap/ic_new_right"
                    android:layout_gravity="center"
                    android:textSize="26px"
                    android:textColor="@color/bg_champagne"
                    android:text="@string/travel_free_info"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp" />
            </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

    </com.ironaviation.traveller.mvp.ui.widget.AutoScrollView>
    <TextView
        android:id="@+id/tw_go_to_order"
        style="@style/button_red_style"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="40px"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_input_box"
        android:layout_gravity="center_horizontal"
        android:text="@string/travel_order"></TextView>
</com.zhy.autolayout.AutoLinearLayout>