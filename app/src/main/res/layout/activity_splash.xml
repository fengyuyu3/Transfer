<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll">

    <com.ironaviation.traveller.mvp.ui.widget.AutoViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_join"
        android:layout_toEndOf="@+id/btn_join"/>
    <TextView
        android:background="@drawable/red_start_btn_selector"
        android:text="@string/start_experience"
        android:layout_marginBottom="150px"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:id="@+id/tw_join"
        android:layout_width="300px"
        android:layout_height="104px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/red_start_btn_font_selector"
        android:textSize="40px"/>

    <TextView
        android:textSize="26px"
        android:gravity="center"
        android:background="@drawable/ring_orange_selector"
        android:textColor="@color/ring_orange_font_selector"
        android:text="@string/start_jump"
        android:layout_marginTop="62px"
        android:layout_marginRight="62px"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:id="@+id/tw_jump"
        android:layout_width="78px"
        android:layout_height="78px" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100px"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>