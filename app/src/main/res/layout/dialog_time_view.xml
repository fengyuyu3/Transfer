<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
   <include layout="@layout/include_cancel_confirm"/>
    <include layout="@layout/include_line_one"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="400px">
        <com.weigan.loopview.LoopView
            android:layout_weight="1"
            android:id="@+id/loopView_day"
            android:layout_width="0px"
            android:layout_height="300px"
            app:awv_textsize="18"
            app:awv_centerTextColor="@color/play_range_bg"
            app:awv_outerTextColor="@color/login_hint_edit"
            app:awv_itemsVisibleCount="5"
            app:awv_dividerTextColor="@color/play_range_bg"
            app:awv_lineSpace="4"
            app:awv_isLoop="false"
            />
        <com.weigan.loopview.LoopView
            android:layout_weight="1"
            android:id="@+id/loopView_hour"
            android:layout_width="0px"
            android:layout_height="300px"
            app:awv_textsize="18"
            app:awv_centerTextColor="@color/play_range_bg"
            app:awv_outerTextColor="@color/login_hint_edit"
            app:awv_itemsVisibleCount="5"
            app:awv_dividerTextColor="@color/play_range_bg"
            app:awv_lineSpace="4"
            app:awv_isLoop="false"
            />
        <com.weigan.loopview.LoopView
            android:layout_weight="1"
            android:id="@+id/loopView_m"
            android:layout_width="0px"
            android:layout_height="300px"
            app:awv_textsize="18"
            app:awv_centerTextColor="@color/play_range_bg"
            app:awv_outerTextColor="@color/login_hint_edit"
            app:awv_itemsVisibleCount="5"
            app:awv_dividerTextColor="@color/play_range_bg"
            app:awv_lineSpace="4"
            app:awv_isLoop="false"
            />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>