<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iw_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="豪华轿车 准载4人"
            android:id="@+id/tw_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0px"
        android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="24px"
                android:textColor="@color/color_666666"
                android:text="预估价 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="36px"
                android:textColor="@color/red_bright"
                android:text="--"
                android:id="@+id/tw_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="24px"
                android:textColor="@color/color_666666"
                android:text=" 元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_marginTop="12px"
            android:textColor="@color/color_a6a6a6"
            android:text="优惠8元"
            android:id="@+id/tw_concessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="14px"
            android:textColor="@color/bg_champagne"
            android:text="高峰期预估计*1.2倍"
            android:id="@+id/tw_multiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
        <ProgressBar
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/reset_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="100px"
            android:layout_height="100px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>