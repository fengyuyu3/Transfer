<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_usual_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:layout_marginTop="@dimen/h_fillet"
        android:background="@drawable/select_btn_grey"

        >

        <ImageView
            android:id="@+id/iv_usual_address_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_toRightOf="@+id/iv_usual_address_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_usual_address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word_deep_grey"
                android:textSize="@dimen/word_title_little"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_usual_address_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textColor="@color/word_already_input"
                android:textSize="@dimen/word_content"
                android:visibility="visible"/>


        </com.zhy.autolayout.AutoLinearLayout>


        <ImageView
            android:id="@+id/iv_usual_address_go_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32px"
            android:background="@mipmap/ic_go"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>