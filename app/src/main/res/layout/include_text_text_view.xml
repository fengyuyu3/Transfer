<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_tti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88px"
    android:background="@drawable/select_btn_grey"
    >
    <TextView
        android:id="@+id/tv_tt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/h_fillet2"
        android:text=""
        android:textSize="30px"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_tt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="180px"
        android:layout_marginRight="@dimen/h_fillet2"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        android:text=""
        android:maxLines="2"
        android:textSize="30px"
        android:layout_toLeftOf="@+id/iv_go_on"
        android:visibility="visible"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_write_grey"
    />
</com.zhy.autolayout.AutoRelativeLayout>