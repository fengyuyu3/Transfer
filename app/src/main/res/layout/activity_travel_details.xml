<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

        <com.ironaviation.traveller.mvp.ui.widget.AutoToolbar
            android:background="@color/bg_toolbar"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:src="@mipmap/ic_back"
                android:id="@+id/iv_function_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="marquee"
                android:gravity="center"
                android:singleLine="true"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="44px"/>


            <ImageView
                android:src="@mipmap/ic_bell"
                android:id="@+id/tv_function_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="32px"
                android:gravity="center"
                android:padding="10px"
                android:textSize="32px"
                android:visibility="visible"
                />

        </com.ironaviation.traveller.mvp.ui.widget.AutoToolbar>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <com.baidu.mapapi.map.TextureMapView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.baidu.mapapi.map.TextureMapView>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginLeft="18px"
            android:layout_marginTop="16px"
            android:layout_marginRight="18px"
            android:background="@drawable/btn_login_edit_shap"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="203px">

            <com.ironaviation.traveller.mvp.ui.widget.CircleImageView
                android:layout_marginLeft="48px"
                android:layout_marginTop="30px"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_location_head"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="27px"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginTop="40px"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/color_travel_details_font"
                        android:textSize="32px"
                        android:text="李师傅"
                        android:id="@+id/tw_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="20px"
                        android:src="@mipmap/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="10px"
                        android:textSize="26px"
                        android:text="5.0"
                        android:id="@+id/tw_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:textColor="@color/color_travel_details_font"
                    android:padding="10px"
                    android:background="@drawable/txt_gray_shap"
                    android:text="川A.M878D"
                    android:textSize="26px"
                    android:layout_marginTop="12px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/color_travel_details_font"
                    android:layout_marginTop="12px"
                    android:textSize="26px"
                    android:text="白色.江淮"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <ImageView
                android:layout_marginTop="64px"
                android:layout_marginRight="48px"
                android:src="@mipmap/ic_location_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="18px"
            android:layout_marginRight="18px"
            android:layout_marginBottom="16px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_login_edit_shap"
            android:layout_width="match_parent"
            android:layout_height="190px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="48px"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_location_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/order_success_font"
                    android:textSize="38px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20px"
                    android:text="派单成功"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:textColor="@color/color_travel_details_font"
                android:text="距您出发时间还有30分钟"
                android:textSize="26px"
                android:layout_marginTop="40px"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>