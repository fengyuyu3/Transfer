<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      android:id="@+id/error">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center"
        android:src="@mipmap/ic_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="30px"
        android:layout_marginTop="42px"
        android:text="@string/network_error_nomal"
        android:textColor="@color/word_deep_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tw_reset_network"
        android:paddingLeft="70px"
        android:paddingRight="70px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:background="@drawable/btn_error_selector"
        android:layout_marginTop="88px"
        android:layout_gravity="center"
        android:textColor="@color/btn_error_font_selector"
        android:textSize="28px"
        android:text="@string/reset_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>